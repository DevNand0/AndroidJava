<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="9dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:rowCount="3"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:drawableLeft="@drawable/ic_warehouse_black_24dp"
                    android:text="WR #" />

                <TextView
                    android:id="@+id/tv_wr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:text="01181787" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_local_shipping_black_24dp"
                    android:text="Shipper" />

                <TextView
                    android:id="@+id/tv_shipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:text="VECTAIR SYSTEMS INC" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:drawableLeft="@drawable/ic_consignee_black_24dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:text="Consignee" />

                <TextView
                    android:id="@+id/tv_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#FF000000"
                    android:text="ALKEMY,SA" />
            </GridLayout>
            <GridLayout
                android:id="@+id/gl_data_content"
                android:rowCount="3"
                android:columnCount="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_lbl_pcs"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:textStyle="bold"
                    android:text="Pcs " />

                <TextView
                    android:id="@+id/txt_lbl_type"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:textStyle="bold"
                    android:text="Type" />

                <TextView
                    android:id="@+id/txt_lbl_dims"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:textStyle="bold"
                    android:text="Dims" />

                <TextView
                    android:id="@+id/tv_picked"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:textStyle="bold"
                    android:text="Picked" />

                <TextView
                    android:id="@+id/tv_loaded"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF000000"
                    android:textStyle="bold"
                    android:text="Loaded" />

            </GridLayout>
            <LinearLayout
                android:id="@+id/ll_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
            <!-- AQUI VA UN CONTENIDO, OTRO LINEAR LAYOUT CON SUS TEXT VIEW -->
            </LinearLayout>


        </LinearLayout>






    </LinearLayout>
</RelativeLayout>